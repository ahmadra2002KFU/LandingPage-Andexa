---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Problem from '../components/sections/Problem.astro';
import Solution from '../components/sections/Solution.astro';
import HowItWorks from '../components/sections/HowItWorks.astro';
import Benefits from '../components/sections/Benefits.astro';
import UseCases from '../components/sections/UseCases.astro';
import Security from '../components/sections/Security.astro';
import Comparison from '../components/sections/Comparison.astro';
import Vision2030 from '../components/sections/Vision2030.astro';
import Pricing from '../components/sections/Pricing.astro';
import FAQ from '../components/sections/FAQ.astro';
import Contact from '../components/sections/Contact.astro';

const locale = 'en';
---

<BaseLayout locale={locale}>
  <Header slot="header" locale={locale} />

  <Hero locale={locale} />
  <Problem locale={locale} />
  <Solution locale={locale} />
  <HowItWorks locale={locale} />
  <Benefits locale={locale} />
  <UseCases locale={locale} />
  <Security locale={locale} />
  <Comparison locale={locale} />
  <Vision2030 locale={locale} />
  <Pricing locale={locale} />
  <FAQ locale={locale} />
  <Contact locale={locale} />

  <Footer slot="footer" locale={locale} />
</BaseLayout>
