---
import Container from '../common/Container.astro';
import SectionHeading from '../common/SectionHeading.astro';
import { t, tArray, type Locale } from '../../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;

const steps = [
  { key: 'connect', icon: 'database', color: 'teal' },
  { key: 'ask', icon: 'chat', color: 'cyan' },
  { key: 'act', icon: 'dashboard', color: 'teal' }
];

const examples = tArray('howItWorks.steps.ask.examples', locale);
---

<section id="how-it-works" class="section bg-cream-white scroll-mt-nav overflow-hidden">
  <Container>
    <SectionHeading
      title={t('howItWorks.headline', locale)}
      align="center"
    />

    <!-- Steps Container -->
    <div class="relative max-w-5xl mx-auto">
      <!-- Connecting Lines (Desktop) -->
      <div class="hidden lg:block absolute top-24 left-0 right-0 z-0 px-16">
        <svg class="w-full h-4" preserveAspectRatio="none" viewBox="0 0 100 10">
          <defs>
            <linearGradient id="line-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="#1B6B8A" stop-opacity="0.3" />
              <stop offset="50%" stop-color="#3BB3B1" stop-opacity="0.5" />
              <stop offset="100%" stop-color="#1B6B8A" stop-opacity="0.3" />
            </linearGradient>
          </defs>
          <!-- Dashed line -->
          <line x1="10" y1="5" x2="90" y2="5" stroke="url(#line-gradient)" stroke-width="2" stroke-dasharray="4 3" class="animate-dash" />
          <!-- Animated dot -->
          <circle r="3" fill="#3BB3B1" class="animate-travel">
            <animateMotion dur="3s" repeatCount="indefinite" path="M10,5 L90,5" />
          </circle>
        </svg>
      </div>

      <!-- Steps Grid -->
      <div class="grid md:grid-cols-3 gap-6 lg:gap-8 relative z-10 stagger-children">
        {steps.map((step, index) => (
          <div class="relative group">
            <!-- Step Card -->
            <div class="bg-white rounded-2xl p-6 lg:p-8 shadow-card hover:shadow-card-hover transition-all duration-300 hover:-translate-y-2 border border-slate-100">
              <!-- Step Number Badge -->
              <div class="absolute -top-4 -start-2 w-10 h-10 bg-teal-700 rounded-xl flex items-center justify-center text-white font-bold shadow-lg transform group-hover:scale-110 transition-transform">
                {index + 1}
              </div>

              <!-- Icon -->
              <div class={`w-16 h-16 rounded-2xl flex items-center justify-center mb-5 ${
                step.color === 'cyan' ? 'bg-cyan-100' : 'bg-teal-100'
              }`}>
                {step.icon === 'database' && (
                  <svg class="w-8 h-8 text-teal-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <ellipse cx="12" cy="5" rx="9" ry="3"/>
                    <path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/>
                    <path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/>
                    <path d="M3 12v-7"/>
                    <path d="M21 12v-7"/>
                  </svg>
                )}
                {step.icon === 'chat' && (
                  <svg class="w-8 h-8 text-cyan-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    <path d="M12 8v.01M8 11h8M8 14h5"/>
                  </svg>
                )}
                {step.icon === 'dashboard' && (
                  <svg class="w-8 h-8 text-teal-700" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="3" y="3" width="7" height="9" rx="1"/>
                    <rect x="14" y="3" width="7" height="5" rx="1"/>
                    <rect x="14" y="12" width="7" height="9" rx="1"/>
                    <rect x="3" y="16" width="7" height="5" rx="1"/>
                  </svg>
                )}
              </div>

              <!-- Title -->
              <h3 class="text-xl font-display font-semibold text-slate-900 mb-3">
                {t(`howItWorks.steps.${step.key}.title`, locale)}
              </h3>

              <!-- Description -->
              <p class="text-slate-600 leading-relaxed mb-4">
                {t(`howItWorks.steps.${step.key}.description`, locale)}
              </p>

              <!-- Step-specific content -->
              {step.key === 'connect' && (
                <div class="flex flex-wrap gap-2">
                  {['Excel', 'SQL', 'Oracle', 'HIS', 'ERP'].map(source => (
                    <span class="px-3 py-1 bg-slate-100 text-slate-600 text-sm rounded-full">
                      {source}
                    </span>
                  ))}
                </div>
              )}

              {step.key === 'ask' && examples && (
                <div class="space-y-2">
                  {examples.slice(0, 2).map((example: string) => (
                    <div class="flex items-start gap-2 text-sm">
                      <span class="text-cyan-500 mt-1 flex-shrink-0">&ldquo;</span>
                      <span class="text-slate-500 italic">{example}</span>
                    </div>
                  ))}
                </div>
              )}

              {step.key === 'act' && (
                <div class="flex flex-wrap gap-2">
                  {[
                    { icon: 'chart', label: locale === 'ar' ? 'تقارير' : 'Reports' },
                    { icon: 'grid', label: locale === 'ar' ? 'لوحات' : 'Dashboards' },
                    { icon: 'download', label: locale === 'ar' ? 'تصدير' : 'Export' }
                  ].map(item => (
                    <span class="flex items-center gap-1.5 px-3 py-1 bg-teal-50 text-teal-700 text-sm rounded-full">
                      {item.icon === 'chart' && (
                        <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/>
                        </svg>
                      )}
                      {item.icon === 'grid' && (
                        <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/>
                        </svg>
                      )}
                      {item.icon === 'download' && (
                        <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/>
                        </svg>
                      )}
                      {item.label}
                    </span>
                  ))}
                </div>
              )}
            </div>

            <!-- Mobile Arrow (between cards) -->
            {index < 2 && (
              <div class="flex md:hidden justify-center my-4">
                <svg class="w-6 h-6 text-teal-400 animate-bounce" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 5v14M5 12l7 7 7-7"/>
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  @keyframes dash {
    to {
      stroke-dashoffset: -14;
    }
  }

  .animate-dash {
    animation: dash 0.8s linear infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-dash,
    .animate-travel circle {
      animation: none !important;
    }
  }
</style>
