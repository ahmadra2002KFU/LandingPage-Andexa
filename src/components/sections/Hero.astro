---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';
import { t, type Locale } from '../../i18n/utils';
import AndexaInterface from '../react/AndexaInterface.tsx';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
---

<section class="relative min-h-[85vh] flex items-center pt-20 md:pt-24 pb-20 md:pb-32 overflow-hidden bg-cream-white">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Blurred teal shape -->
    <div class="absolute -top-1/4 -right-1/4 w-[800px] h-[800px] bg-teal-700/5 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-1/4 -left-1/4 w-[600px] h-[600px] bg-cyan-400/5 rounded-full blur-3xl"></div>

    <!-- Geometric nodes (matching logo style) -->
    <div class="hero-node absolute top-1/4 right-1/4 w-3 h-3 bg-teal-400 rounded-full opacity-40 animate-float delay-100"></div>
    <div class="hero-node absolute top-1/3 right-1/3 w-2 h-2 bg-cyan-400 rounded-full opacity-30 animate-float delay-300"></div>
    <div class="hero-node absolute bottom-1/3 left-1/4 w-4 h-4 bg-teal-500 rounded-full opacity-20 animate-float delay-500"></div>
    <div class="hero-node absolute top-2/3 right-1/5 w-2 h-2 bg-teal-300 rounded-full opacity-35 animate-float delay-200"></div>

    <!-- Connecting lines -->
    <svg class="absolute inset-0 w-full h-full opacity-10" xmlns="http://www.w3.org/2000/svg">
      <line x1="25%" y1="25%" x2="33%" y2="33%" stroke="#1B6B8A" stroke-width="1" stroke-dasharray="4 4"/>
      <line x1="33%" y1="33%" x2="25%" y2="66%" stroke="#3BB3B1" stroke-width="1" stroke-dasharray="4 4"/>
    </svg>
  </div>

  <Container size="full" class="relative z-10">
    <div class="grid lg:grid-cols-[0.85fr_1.15fr] gap-8 lg:gap-10 items-center py-8 lg:py-12">
      <!-- Content Column -->
      <div class="max-w-2xl">
        <!-- Headline -->
        <h1 class="hero-headline text-hero font-display font-semibold text-slate-950 mb-6">
          <span class="inline-block opacity-0 animate-slide-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            {locale === 'ar' ? 'اسأل بياناتك.' : 'Ask Your Data.'}
          </span>
          <br />
          <span class="inline-block opacity-0 animate-slide-up" style="animation-delay: 0.25s; animation-fill-mode: forwards;">
            <span class="text-gradient">{locale === 'ar' ? 'احصل على إجابات' : 'Get Answers'}</span>
            {locale === 'ar' ? ' في ثوانٍ.' : ' in Seconds.'}
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="hero-subheadline text-body-lg text-slate-600 mb-8 opacity-0 animate-fade-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          {t('hero.subheadline', locale)}
        </p>

        <!-- CTAs -->
        <div class="hero-ctas flex flex-wrap gap-4 opacity-0 animate-fade-up" style="animation-delay: 0.55s; animation-fill-mode: forwards;">
          <Button href="#contact" size="lg">
            {t('hero.cta.primary', locale)}
            <svg class="w-5 h-5 rtl-flip" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </Button>

          <Button href="#how-it-works" variant="secondary" size="lg">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polygon points="10 8 16 12 10 16 10 8" fill="currentColor"/>
            </svg>
            {t('hero.cta.secondary', locale)}
          </Button>
        </div>

        <!-- Trust Indicators -->
        <div class="hero-trust mt-12 flex flex-wrap items-center gap-6 text-sm text-slate-500 opacity-0 animate-fade-up" style="animation-delay: 0.7s; animation-fill-mode: forwards;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-palm-green" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="M9 12l2 2 4-4"/>
            </svg>
            <span>{locale === 'ar' ? 'متوافق مع PDPL' : 'PDPL Compliant'}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-teal-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <circle cx="12" cy="16" r="1"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            <span>{locale === 'ar' ? '100% داخل مقر العمل' : '100% On-Premises'}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-sand-gold" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span>{locale === 'ar' ? 'جاهز لرؤية 2030' : 'Vision 2030 Ready'}</span>
          </div>
        </div>
      </div>

      <!-- Interactive Demo Column -->
      <div class="hero-visual relative opacity-0 animate-slide-right" style="animation-delay: 0.3s; animation-fill-mode: forwards;">
        <div class="relative">
          <!-- Subtle Shadow -->
          <div class="absolute inset-2 bg-teal-900/10 rounded-xl blur-xl transform translate-y-2"></div>
          
          <!-- Demo Container -->
          <div class="relative rounded-xl overflow-hidden shadow-lg">
            <AndexaInterface client:visible />
          </div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 2s; animation-fill-mode: forwards;">
    <a href="#problem" class="flex flex-col items-center gap-2 text-slate-400 hover:text-teal-600 transition-colors">
      <span class="text-xs font-medium">{locale === 'ar' ? 'اكتشف المزيد' : 'Discover More'}</span>
      <svg class="w-5 h-5 animate-bounce" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </a>
  </div>
</section>



<style>
  .hero-node {
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-node,
    .animate-float {
      animation: none !important;
    }
  }
</style>
