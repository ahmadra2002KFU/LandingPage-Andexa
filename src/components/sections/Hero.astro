---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';
import { t, type Locale } from '../../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
---

<section class="relative min-h-[85vh] flex items-center pt-20 md:pt-24 overflow-hidden bg-cream-white">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Blurred teal shape -->
    <div class="absolute -top-1/4 -right-1/4 w-[800px] h-[800px] bg-teal-700/5 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-1/4 -left-1/4 w-[600px] h-[600px] bg-cyan-400/5 rounded-full blur-3xl"></div>

    <!-- Geometric nodes (matching logo style) -->
    <div class="hero-node absolute top-1/4 right-1/4 w-3 h-3 bg-teal-400 rounded-full opacity-40 animate-float delay-100"></div>
    <div class="hero-node absolute top-1/3 right-1/3 w-2 h-2 bg-cyan-400 rounded-full opacity-30 animate-float delay-300"></div>
    <div class="hero-node absolute bottom-1/3 left-1/4 w-4 h-4 bg-teal-500 rounded-full opacity-20 animate-float delay-500"></div>
    <div class="hero-node absolute top-2/3 right-1/5 w-2 h-2 bg-teal-300 rounded-full opacity-35 animate-float delay-200"></div>

    <!-- Connecting lines -->
    <svg class="absolute inset-0 w-full h-full opacity-10" xmlns="http://www.w3.org/2000/svg">
      <line x1="25%" y1="25%" x2="33%" y2="33%" stroke="#1B6B8A" stroke-width="1" stroke-dasharray="4 4"/>
      <line x1="33%" y1="33%" x2="25%" y2="66%" stroke="#3BB3B1" stroke-width="1" stroke-dasharray="4 4"/>
    </svg>
  </div>

  <Container size="full" class="relative z-10">
    <div class="grid lg:grid-cols-[1.1fr_0.9fr] gap-8 lg:gap-12 items-center py-8 lg:py-12">
      <!-- Content Column -->
      <div class="max-w-2xl">
        <!-- Headline -->
        <h1 class="hero-headline text-hero font-display font-semibold text-slate-950 mb-6">
          <span class="inline-block opacity-0 animate-slide-up" style="animation-delay: 0.1s; animation-fill-mode: forwards;">
            {locale === 'ar' ? 'اسأل بياناتك.' : 'Ask Your Data.'}
          </span>
          <br />
          <span class="inline-block opacity-0 animate-slide-up" style="animation-delay: 0.25s; animation-fill-mode: forwards;">
            <span class="text-gradient">{locale === 'ar' ? 'احصل على إجابات' : 'Get Answers'}</span>
            {locale === 'ar' ? ' في ثوانٍ.' : ' in Seconds.'}
          </span>
        </h1>

        <!-- Subheadline -->
        <p class="hero-subheadline text-body-lg text-slate-600 mb-8 opacity-0 animate-fade-up" style="animation-delay: 0.4s; animation-fill-mode: forwards;">
          {t('hero.subheadline', locale)}
        </p>

        <!-- CTAs -->
        <div class="hero-ctas flex flex-wrap gap-4 opacity-0 animate-fade-up" style="animation-delay: 0.55s; animation-fill-mode: forwards;">
          <Button href="#contact" size="lg">
            {t('hero.cta.primary', locale)}
            <svg class="w-5 h-5 rtl-flip" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </Button>

          <Button href="#how-it-works" variant="secondary" size="lg">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <polygon points="10 8 16 12 10 16 10 8" fill="currentColor"/>
            </svg>
            {t('hero.cta.secondary', locale)}
          </Button>
        </div>

        <!-- Trust Indicators -->
        <div class="hero-trust mt-12 flex flex-wrap items-center gap-6 text-sm text-slate-500 opacity-0 animate-fade-up" style="animation-delay: 0.7s; animation-fill-mode: forwards;">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-palm-green" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="M9 12l2 2 4-4"/>
            </svg>
            <span>{locale === 'ar' ? 'متوافق مع PDPL' : 'PDPL Compliant'}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-teal-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <circle cx="12" cy="16" r="1"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
            <span>{locale === 'ar' ? '100% داخل مقر العمل' : '100% On-Premises'}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-sand-gold" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span>{locale === 'ar' ? 'جاهز لرؤية 2030' : 'Vision 2030 Ready'}</span>
          </div>
        </div>
      </div>

      <!-- Video/Visual Column -->
      <div class="hero-visual relative opacity-0 animate-slide-right" style="animation-delay: 0.3s; animation-fill-mode: forwards;">
        <!-- Device Frame -->
        <div class="relative transform rotate-1 hover:rotate-0 transition-transform duration-500">
          <!-- Shadow -->
          <div class="absolute inset-0 bg-teal-900/20 rounded-2xl blur-2xl transform translate-y-4 scale-95"></div>

          <!-- Frame -->
          <div class="relative bg-slate-800 rounded-2xl p-2 shadow-hero-video">
            <!-- Browser Chrome -->
            <div class="flex items-center gap-2 px-3 py-2 bg-slate-700 rounded-t-xl">
              <div class="flex gap-1.5">
                <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                <div class="w-3 h-3 bg-green-400 rounded-full"></div>
              </div>
              <div class="flex-1 mx-4">
                <div class="bg-slate-600 rounded-md px-3 py-1 text-xs text-slate-400 text-center">
                  andexa.tech
                </div>
              </div>
            </div>

            <!-- Video Container -->
            <div class="relative aspect-video bg-slate-900 rounded-b-xl overflow-hidden">
              <!-- Poster Image (always visible as fallback) -->
              <img
                src="/assets/images/demo-poster.webp"
                alt="ANDEXA Demo"
                class="absolute inset-0 w-full h-full object-cover"
                id="hero-poster"
                loading="eager"
              />

              <!-- Video (lazy loaded) -->
              <video
                id="hero-video"
                class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-500"
                autoplay
                muted
                loop
                playsinline
                preload="none"
                poster="/assets/images/demo-poster.webp"
              >
                <source src="/assets/videos/Video-Demo.webm" type="video/webm" />
                <source src="/assets/videos/Video-Demo.mp4" type="video/mp4" />
              </video>

              <!-- Play indicator overlay -->
              <div id="video-play-overlay" class="absolute inset-0 flex items-center justify-center bg-slate-900/40 transition-opacity duration-300 cursor-pointer">
                <div class="w-16 h-16 flex items-center justify-center bg-white/90 rounded-full shadow-lg hover:scale-110 transition-transform">
                  <svg class="w-6 h-6 text-teal-700 ms-1" viewBox="0 0 24 24" fill="currentColor">
                    <polygon points="5 3 19 12 5 21 5 3"/>
                  </svg>
                </div>
              </div>
            </div>
          </div>

          <!-- Floating elements -->
          <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-card p-3 animate-float">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-teal-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-teal-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
              </div>
              <div class="text-xs">
                <div class="font-medium text-slate-800">{locale === 'ar' ? 'تقرير جاهز' : 'Report Ready'}</div>
                <div class="text-slate-500">&lt; 5s</div>
              </div>
            </div>
          </div>

          <div class="absolute -bottom-4 -left-4 bg-white rounded-xl shadow-card p-3 animate-float delay-200">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-cyan-100 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-cyan-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
              </div>
              <div class="text-xs">
                <div class="font-medium text-slate-800">{locale === 'ar' ? 'باللغة الطبيعية' : 'Natural Language'}</div>
                <div class="text-slate-500">{locale === 'ar' ? 'عربي + إنجليزي' : 'AR + EN'}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 opacity-0 animate-fade-in" style="animation-delay: 2s; animation-fill-mode: forwards;">
    <a href="#problem" class="flex flex-col items-center gap-2 text-slate-400 hover:text-teal-600 transition-colors">
      <span class="text-xs font-medium">{locale === 'ar' ? 'اكتشف المزيد' : 'Discover More'}</span>
      <svg class="w-5 h-5 animate-bounce" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M5 12l7 7 7-7"/>
      </svg>
    </a>
  </div>
</section>

<script>
  // Video lazy loading and interaction
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('hero-video') as HTMLVideoElement;
    const poster = document.getElementById('hero-poster');
    const overlay = document.getElementById('video-play-overlay');

    if (!video) return;

    // Check for reduced motion preference
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
      overlay?.classList.add('hidden');
      return;
    }

    // Check connection speed
    const connection = (navigator as any).connection;
    if (connection?.saveData || connection?.effectiveType === '2g') {
      return;
    }

    // Load and play video
    const loadVideo = () => {
      video.preload = 'auto';
      video.load();

      video.addEventListener('canplaythrough', () => {
        video.classList.remove('opacity-0');
        overlay?.classList.add('opacity-0', 'pointer-events-none');
        video.play();
      }, { once: true });
    };

    // Start loading after a short delay
    setTimeout(loadVideo, 1000);

    // Click overlay to play
    overlay?.addEventListener('click', () => {
      video.play();
      overlay.classList.add('opacity-0', 'pointer-events-none');
    });
  });
</script>

<style>
  .hero-node {
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-node,
    .animate-float {
      animation: none !important;
    }
  }
</style>
