---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';
import { t, type Locale } from '../../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
---

<section id="contact" class="section bg-gradient-dark text-white scroll-mt-nav">
  <Container>
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left: CTA Content -->
      <div class="animate-on-scroll">
        <h2 class="text-section-title font-display font-bold text-white mb-4">
          {t('cta.headline', locale)}
        </h2>
        <p class="text-xl text-cyan-300 mb-8">
          {t('cta.subheadline', locale)}
        </p>

        <!-- Additional CTAs -->
        <div class="flex flex-wrap gap-4 mb-12">
          <a href="#" class="inline-flex items-center gap-2 text-white hover:text-cyan-300 transition-colors">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
              <polyline points="7 10 12 15 17 10"/>
              <line x1="12" y1="15" x2="12" y2="3"/>
            </svg>
            {t('cta.options.technical', locale)}
          </a>
        </div>

        <!-- Contact Info -->
        <div class="space-y-4">
          <a
            href="mailto:contact@andexa.tech"
            class="flex items-center gap-3 text-slate-300 hover:text-cyan-300 transition-colors"
          >
            <div class="w-10 h-10 bg-white/10 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <span>contact@andexa.tech</span>
          </a>
        </div>
      </div>

      <!-- Right: Contact Form -->
      <div class="animate-on-scroll">
        <form
          action="https://formspree.io/f/YOUR_FORM_ID"
          method="POST"
          class="bg-white rounded-2xl p-6 lg:p-8 shadow-2xl"
        >
          <h3 class="text-xl font-display font-semibold text-slate-900 mb-6">
            {t('contact.headline', locale)}
          </h3>

          <div class="space-y-4">
            <!-- Name -->
            <div>
              <label for="name" class="label">
                {t('contact.form.name', locale)} <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="input"
                placeholder={locale === 'ar' ? 'أدخل اسمك' : 'Enter your name'}
              />
            </div>

            <!-- Organization -->
            <div>
              <label for="organization" class="label">
                {t('contact.form.organization', locale)} <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="organization"
                name="organization"
                required
                class="input"
                placeholder={locale === 'ar' ? 'اسم المؤسسة' : 'Organization name'}
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="label">
                {t('contact.form.email', locale)} <span class="text-red-500">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="input"
                placeholder={locale === 'ar' ? 'بريدك@مثال.com' : 'you@example.com'}
              />
            </div>

            <!-- Role -->
            <div>
              <label for="role" class="label">
                {t('contact.form.role', locale)}
              </label>
              <input
                type="text"
                id="role"
                name="role"
                class="input"
                placeholder={locale === 'ar' ? 'المسمى الوظيفي' : 'Your role'}
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="label">
                {t('contact.form.phone', locale)}
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="input"
                dir="ltr"
                placeholder="+966 XX XXX XXXX"
              />
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="label">
                {t('contact.form.message', locale)}
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="input resize-none"
                placeholder={locale === 'ar' ? 'كيف يمكننا مساعدتك؟' : 'How can we help you?'}
              ></textarea>
            </div>

            <!-- Submit -->
            <Button type="submit" class="w-full justify-center" size="lg">
              {t('contact.form.submit', locale)}
              <svg class="w-5 h-5 rtl-flip" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"/>
                <polygon points="22 2 15 22 11 13 2 9 22 2"/>
              </svg>
            </Button>
          </div>

          <!-- Hidden fields for form tracking -->
          <input type="hidden" name="_language" value={locale} />
          <input type="hidden" name="_subject" value="New ANDEXA Demo Request" />
        </form>
      </div>
    </div>
  </Container>
</section>
