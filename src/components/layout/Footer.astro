---
import Container from '../common/Container.astro';
import { t, type Locale } from '../../i18n/utils';
import { BRAND, SOCIAL_LINKS } from '../../lib/constants';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;

const footerSections = [
  {
    key: 'company',
    links: ['about', 'mission', 'careers', 'contact']
  },
  {
    key: 'product',
    links: ['features', 'security', 'integrations']
  },
  {
    key: 'resources',
    links: ['documentation', 'caseStudies', 'blog', 'support']
  },
  {
    key: 'legal',
    links: ['privacy', 'terms']
  }
];
---

<footer class="bg-slate-950 text-white pt-16 pb-8">
  <Container size="xl">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 lg:gap-12 mb-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-3 lg:col-span-2">
        <a href={locale === 'ar' ? '/ar/' : '/'} class="inline-block mb-4">
          <img
            src="/assets/images/logo-white.png"
            alt="ANDEXA"
            class="h-10 w-auto"
            loading="lazy"
          />
        </a>
        <p class="text-slate-400 text-sm mb-6 max-w-xs">
          {t('hero.subheadline', locale).slice(0, 120)}...
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center bg-slate-800 hover:bg-teal-700 rounded-lg transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a
            href={SOCIAL_LINKS.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center bg-slate-800 hover:bg-teal-700 rounded-lg transition-colors"
            aria-label="Twitter / X"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Link Sections -->
      {footerSections.map((section) => (
        <div>
          <h3 class="font-semibold text-white mb-4">
            {t(`footer.${section.key}.title`, locale)}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href="#"
                  class="text-slate-400 hover:text-teal-400 text-sm transition-colors"
                >
                  {t(`footer.${section.key}.${link}`, locale)}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <p class="text-slate-500 text-sm">
          {t('footer.copyright', locale)}
        </p>

        <!-- Tagline with Saudi Flag -->
        <div class="flex items-center gap-2 text-slate-400 text-sm">
          <span>{t('footer.tagline', locale)}</span>
          <span class="text-lg">ðŸ‡¸ðŸ‡¦</span>
        </div>
      </div>
    </div>
  </Container>
</footer>

<style>
  footer a {
    @apply focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-teal-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950 rounded;
  }
</style>
